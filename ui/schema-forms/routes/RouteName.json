{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "title": "Name",
      "description": "Unique name for this resource"
    },
    "namespace": {
      "type": "string",
      "title": "Namespace",
      "description": "Kubernetes-style namespace prefix"
    },
    "ruleName": {
      "type": [
        "string",
        "null"
      ],
      "title": "Rule Name",
      "description": "Optional name for this rule"
    },
    "kind": {
      "type": [
        "string",
        "null"
      ],
      "title": "Kind"
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "namespace"
  ],
  "title": "Route Name",
  "description": "Route Name with matching conditions"
}